/*缩小边距（代码框、li等）*/
ol {
    margin-block-start: 0;
    margin-block-end: 0;
    padding-inline-start: 55px;
}

/*缩小边距（代码框、li等）*/
.highlight{
    margin: 0 0 !important;
}

/*mermaid限制高度，居中*/
.mermaid {
  text-align: center;
}

/*表格沾满行*/
body table {
  display: table !important;
}

/*目录靠左对齐*/
#toc li {
  text-align: left !important;
  overflow: hidden !important;
  text-overflow:ellipsis !important;
  white-space: nowrap !important;
}

/* 修改你的模板css文件，添加全局样式 */
.mermaid {
  max-height: 200px;
  position: relative;
  overflow: hidden;
  &:after {
    content: 'Loading ...';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #1c1f20;
    color: #FFF;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

.mermaid[data-processed]{
  max-height: none;
  overflow: auto;
  &:after {
    content: none;
  }
}
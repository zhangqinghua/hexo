// Fonts
$font-family-body = "Source Han Sans HW", "Source Han Sans HW Loca"
$font-family-mono = "Source Han Sans HW", "Source Han Sans HW Loca"
$font-family-tt = "Source Han Sans HW", "Source Han Sans HW Loca"
$font-size = 14px
$line-height = 1.725
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
$logo-height = 0px + (hexo-config("logo.height") || 0)
// Colors
$colors = hexo-config("colorscheme") || "dark"
